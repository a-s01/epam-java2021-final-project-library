<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/library">
    <!-- username and pass hidden intentionally, should be added before deploying -->
    <Resource
            name="jdbc/library-app"
            auth="Container"
            type="javax.sql.DataSource"
            maxTotal="100"
            maxIdle="30"
            maxWaitMillis="10000"
            username=""
            password=""
            driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/library-app"/>
</Context>